<div class="mb-8 text-left" data-controller="tabs" data-tabs-index='0' data-tabs-active-class="!bg-gray-50" data-tabs-inactive-class="hidden">

  <header class="flex space-y-6 justify-between items-center pb-8 text-center md:space-y-0 md:text-left md:flex-row">
    <div class="flex flex-row justify-between w-full items-center">
      <h3 class="text-2xl font-medium text-gray-900 dark:text-gray-200" id="solutions">Your solution</h3>

       <%= link_to "View all solutions", lesson_project_submissions_path(lesson), class: "button button--secondary rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900" %>
    </div>
  </header>

  <div data-tabs-target="panel" class="mx-auto">
    <div id="your-solution">
      <%= render "lessons/project_submissions/your_solution", project_submission: @project_submission, lesson: @lesson %>
    </div>
  </div>

  <div data-tabs-target="panel" class="mx-auto">
    <%= turbo_frame_tag "submissions-list", src: lesson_project_submissions_path(lesson, limit: 10), loading: :lazy do %>
      loading...
    <% end %>
  </div>

</div>
